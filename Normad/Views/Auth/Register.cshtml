@using Normad.ViewModels
@model RegisterVM
@{
    ViewData["Title"] = "Register";
}
<div class="login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 pt-5 pt-lg-0">
                <form method="post">
                    <div class="login-form">
                        <h4 class="login-title">Register</h4>
                        <div class="row">
                            <div class="col-md-6 col-12">
                                <label asp-for="Fullname">First Name</label>
                                <input asp-for="Fullname" placeholder="First Name">
                                <span class="text-danger" asp-validation-for="Fullname"></span>
                            </div>
                            <div class="col-md-6 col-12">
                                <label asp-for="Username">Username</label>
                                <input asp-for="Username" placeholder="Username">
                                <span class="text-danger" asp-validation-for="Username"></span>
                            </div>
                            <div class="col-md-6 col-12">
                                <label asp-for="Email">Email Address*</label>
                                <input asp-for="Email" placeholder="Email Address">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" placeholder="Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword">Confirm Password</label>
                                <input asp-for="ConfirmPassword" placeholder="Confirm Password">
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="forgotton-password_info" style="display: flex;justify-content: end;">
                                <a asp-controller="Auth" asp-action="Login"> Have you Account?</a>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">Register</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>