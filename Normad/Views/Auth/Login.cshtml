@using Normad.ViewModels
@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="row" style="display: flex;justify-content: center;">
            <div class="col-lg-8">
                <form method="post">
                    <div class="login-form">
                        <h4 class="login-title">Login</h4>
                        <div class="row">
                            <div class="col-lg-12">
                                <label asp-for="UsernameOrName">Username Or Email</label>
                                <input asp-for="UsernameOrName" placeholder="Email Address Or Username">
                                <span asp-validation-for="UsernameOrName"></span>
                            </div>
                            <div class="col-lg-12">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" placeholder="Password">
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="col-md-8">
                                <div class="check-box">
                                    <input asp-for="RememberMe">
                                    <label asp-for="RememberMe">Remember me</label>
                                </div>
                            </div>
                            <div class="col-md-4 pt-1 mt-md-0">
                                <div class="forgotton-password_info">
                                    <a href="#"> Forgotten password?</a>
                                </div>
                                <div class="forgotton-password_info">
                                    <a asp-controller="Auth" asp-action="Register"> Need Account?</a>
                                </div>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="col-lg-12 pt-5">
                                <button class="btn btn-custom-size lg-size btn-pronia-primary">Login</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>